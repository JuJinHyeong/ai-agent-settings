{
  "env": {
    "APP_ID": "Anthropic.Claude.Code",
    "ICON_PATH": "claude.png"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node notify.js"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node notify.js"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node encoding-check.js"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node notify.js"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node notify.js"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node notify.js"
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node notify.js"
          }
        ]
      }
    ]
  }
}
